{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Liste des articles</h1>

    <div class="mb-4">
        <label for="filter_users" class="block text-sm font-medium text-gray-600 mb-2">
            Filtrer par auteur
        </label>
        
        <div class="flex gap-3">
            <input 
                type="text" 
                id="filter_users" 
                list="users" 
                placeholder="Rechercher un utilisateur..."
                class="flex-1 border-gray-300 rounded-lg shadow-sm p-2 focus:ring focus:ring-blue-300 focus:border-blue-500"
            />
            <button id="reset"
                class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                Réinitialiser
            </button>
        </div>

        <datalist id="users">
            {% for user in users %}
                <option value="{{ user.username }}"></option>
            {% endfor %}
        </datalist>
    </div>

    <div class="mb-4">
        <label for="filter_cat" class="block text-sm font-medium text-gray-600 mb-2">
            Filtrer par catégorie
        </label>
        <select id="filter_cat", multiple class="w-full border-gray-300 rounded-lg shadow-sm p-2 focus:ring focus:ring-blue-300 focus:border-blue-500">
            {% for cat in allCats %}
                <option value="{{ cat.name }}">{{ cat.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="flex justify-end">
        <button id="valid_filter_cat" class="px-5 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600 transition">Valider</button>
    </div>

    <div class="flex justify-center space-x-2 my-6">
        {% for i in 1..nbPages %}
            <button id="page_{{i}}" class="px-4 py-2 rounded-lg border text-gray-700 bg-white hover:bg-blue-100 hover:text-blue-600 transition {% if loop.index == currentPage %}bg-blue-500 text-white {% endif %} page">{{ i }}</button>
        {% endfor %}
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-4">
        {% for article in articles %}
            <div class="bg-white shadow-xl rounded-2xl overflow-hidden flex flex-col">
                
                <div class="h-48 w-full overflow-hidden">
                    <img src="{{ article.image }}" 
                        alt="{{ article.title }}" 
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">
                </div>
                
                <div class="p-5 flex flex-col flex-grow">
                    <h2 class="text-xl font-semibold text-gray-800 mb-3 text-center">
                        {{ article.title }}
                    </h2>

                    <div class="mt-auto">
                        <div class="flex justify-between items-center mb-4 text-sm text-gray-500">
                            <span>Publié le {{ article.publishedAt|date("d/m/Y") }}</span>
                            <span>par {{ article.user.username }}</span>
                        </div>

                        <div class="flex justify-center gap-3">
                            <a href="{{ url('article_view', {'id': article.id}) }}" 
                            class="px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-600 transition">
                                Voir
                            </a>

                            {% if app.user and (article.user == app.user or "ROLE_ADMIN" in app.user.roles) %}
                                <a href="{{ url('article_edit', {'id': article.id}) }}" 
                                class="px-4 py-2 bg-blue-400 text-white rounded-lg shadow hover:bg-blue-500 transition">
                                    Modifier
                                </a>
                                <button class="px-4 py-2 bg-purple-500 text-white rounded-lg shadow hover:bg-purple-600 transition delete" 
                                        id="{{ article.id }}">
                                    Supprimer
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="flex justify-center space-x-2 my-6">
        {% for i in 1..nbPages %}
            <button id="page_{{i}}" class="px-4 py-2 rounded-lg border text-gray-700 bg-white hover:bg-blue-100 hover:text-blue-600 transition {% if loop.index == currentPage %}bg-blue-500 text-white {% endif %} page">{{ i }}</button>
        {% endfor %}
    </div>

    <div id="modal" class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
        <div class="bg-white rounded-xl shadow-lg p-6 max-w-sm w-full">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Confirmation</h2>
            <p class="text-gray-600 mb-6">Voulez-vous vraiment supprimer cet article ?</p>
            
            <div class="flex justify-end gap-3">
                <button id="delete_no" 
                    class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                    Annuler
                </button>
                <button id="delete_yes" 
                    class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
                    Supprimer
                </button>
            </div>
        </div>
    </div>
</div>

<script>

const buttons = document.getElementsByClassName("delete");
const modal = document.getElementById("modal");
let idDelete;

Array.from(buttons).map((button) =>
{
    button.addEventListener("click", () =>
    {
        //document.getElementById("modal").hidden = false;
        modal.classList.remove("hidden");
        modal.classList.add("flex");
        idDelete = button.id;
    });
});

document.getElementById("delete_yes").addEventListener("click", () =>
{
    window.location.href = "/articles/delete/" + idDelete;
});

document.getElementById("delete_no").addEventListener("click", () =>
{
    //document.getElementById("modal").hidden = true;
    modal.classList.remove("flex");
    modal.classList.add("hidden");
});

///////////////////////////////////////////

const users =
[
    {% for user in users %}
        "{{ user.username }}",
    {% endfor %}
]

document.getElementById("filter_users").addEventListener("input", (e) =>
{
    users.map((user) =>
    {
        if(user === e.target.value)
        {
            window.location.href = "/articles?user=" + e.target.value;
        }
    });
});

///////////////////////////////////////////

let selectedValues = [];

document.getElementById("filter_cat").addEventListener("change", (e) =>
{
    selectedValues = Array.from(e.target.selectedOptions).map(option => option.value);
});

document.getElementById("reset").addEventListener("click", () =>
{
    window.location.href = "{{ url('articles') }}";
});

document.getElementById("valid_filter_cat").addEventListener("click", () =>
{
    //console.log(selectedValues);

    let params = "";

    if(selectedValues.length !== 0)
    {
        for(let i = 0 ; i < selectedValues.length ; i++)
        {
            params += selectedValues[i];

            if(i < selectedValues.length - 1)
            {
                params += "+";
            }
        }
    }
    
    //console.log(params);
    
    if(params !== "")
    {
        window.location.href = "/articles?cats=" + params;
    }

    else
    {
        window.location.href = "{{ url('articles') }}";
    }
});

///////////////////////////////////////////

let pages = document.getElementsByClassName("page");

Array.from(pages).map((page) =>
{
    page.addEventListener("click", () =>
    {
        const numPage = page.id.split("_")[1];

        let url = window.location.pathname + window.location.search;

        if(window.location.search === "")
        {
            url += "?page=";
        }
        else
        {
            url += "&page=";
        }

        if(window.location.search.indexOf("page=") === -1)
        {
            url += numPage;
        }
        else
        {
            url = window.location.search.substring(0, window.location.search.indexOf("page=") + 5) + numPage;
        }

        window.location.href = url;
    });
});

</script>

{% endblock %}
