{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 py-8">

    <h1 class="text-3xl font-bold text-gray-900 mb-4 text-center">{{ article.title }}</h1>

    {% if article.image %}
        <img src="{{ article.image }}" alt="Image de {{ article.title }}" 
             class="w-full h-64 object-cover rounded-lg shadow mb-6">
    {% endif %}

    <div class="prose prose-lg max-w-none mb-6">
        {{ article.content | nl2br }}
    </div>

    <div class="text-sm text-gray-600 mb-6">
        Publié le <span class="font-medium">{{ article.publishedAt | date("d/m/Y à H:i") }}</span> 
        par <span class="font-semibold">{{ article.user.username }}</span>
    </div>

    <div class="mb-6">
        <span class="font-semibold text-gray-700">Catégories :</span>
        {% for cat in article.categories %}
            <span class="inline-block bg-gray-200 text-gray-700 text-sm px-2 py-1 rounded-full mr-2">{{ cat.name }}</span>
        {% else %}
            <span class="text-gray-500 text-sm">Aucune</span>
        {% endfor %}
    </div>

    <div class="flex items-center gap-4 mb-8">
        <div class="flex items-center gap-2">
            <img src="/images/like.png" alt="like" class="w-6 h-6">
            <span class="text-gray-800 font-medium">{{ nbLikes }}</span>
        </div>
        <div class="flex items-center gap-2">
            <img src="/images/dislike.png" alt="dislike" class="w-6 h-6">
            <span class="text-gray-800 font-medium">{{ nbDislikes }}</span>
        </div>
    </div>

    <div class="mb-10">
        {{ form_start(formLike, {'attr': {'class': 'flex gap-4'}}) }}
            {{ form_row(formLike.like, {'attr': {'class': 'bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg cursor-pointer'}}) }}
            {{ form_row(formLike.dislike, {'attr': {'class': 'bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg cursor-pointer'}}) }}
        {{ form_end(formLike) }}
    </div>

    <div class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Commentaires</h2>

        <div class="space-y-4">
            {% for comment in article.comments %}
                <div class="bg-gray-50 p-4 rounded-lg shadow">
                    <p class="text-gray-800 mb-2">{{ comment.content }}</p>
                    <div class="text-xs text-gray-500">
                        Publié le {{ comment.createdAt | date("d/m/Y") }} à {{ comment.createdAt | date("H:i") }}
                        par <span class="font-medium">{{ comment.author.username }}</span>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500">Aucun commentaire pour le moment.</p>
            {% endfor %}
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Ajouter un commentaire</h3>
        {{ form_start(formComment, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(formComment.content, {'attr': {'class': 'w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
        {{ form_end(formComment) }}
    </div>

    <div class="mt-8 text-center">
        <a href="{{ url('articles') }}" class="text-blue-600 hover:underline">
            ← Revenir à la liste des articles
        </a>
    </div>
</div>
{% endblock %}
