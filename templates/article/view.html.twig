{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

<div>
    <h3>{{ article.title }}</h3>
    <p>{{ article.content | nl2br }}</p>
    {% if article.image %}
        <img src="{{article.image}}" alt="{{article.image}}" />
    {% endif %}
    <br>
    <br>
    <div>Publié le {{ article.publishedAt | date("d F Y à H:i") }}</div>
</div>

{% endblock %}
