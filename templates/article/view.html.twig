{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

<div>
    <h3>{{ article.title }}</h3>
    <p>{{ article.content | nl2br }}</p>
    {% if article.image %}
        <img src="{{article.image}}" alt="{{article.image}}" />
    {% endif %}
    <br>
    <br>
    <div>Publié le {{ article.publishedAt | date("d F Y à H:i") }} par {{ article.user.username }}</div>
    <div>
        Catégories :
        {% for cat in article.categories %}
            {{ cat.name }}
        {% endfor %}
    </div>
    <div>
        {% for comment in article.comments %}
            <p>{{ comment.content }}</p>
            <div>(Publié le {{ comment.createdAt | date("d:m:Y") }} à {{ comment.createdAt | date("h:i") }} par {{ comment.author.username }})</div>
        {% endfor %}
    </div>

    {{ form(form) }}
</div>

{% endblock %}
