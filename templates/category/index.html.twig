{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Liste des catégories</h1>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-4">
        {% for cat in cats %}
            <div class="bg-white shadow-xl rounded-2xl overflow-hidden flex flex-col">
                <div class="p-5 flex flex-col flex-grow">
                    <h2 class="text-xl font-semibold text-gray-800 mb-3 text-center">{{ cat.name }}</h2>
                    <div class="mt-auto flex flex-row justify-evenly">
                        <a href="{{ url('cat_edit', {'id': cat.id}) }}" class="px-4 py-2 bg-blue-400 text-white rounded-lg shadow hover:bg-blue-500 transition">Modifier</a>
                        <button id="{{cat.id}}" class="px-4 py-2 bg-purple-500 text-white rounded-lg shadow hover:bg-purple-600 transition delete">Supprimer</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div id="modal" class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
        <div class="bg-white rounded-xl shadow-lg p-6 max-w-sm w-full">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Confirmation</h2>
            <p class="text-gray-600 mb-6">Voulez-vous vraiment supprimer cette catégorie ?</p>
            
            <div class="flex justify-end gap-3">
                <button id="delete_no" 
                    class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
                    Annuler
                </button>
                <button id="delete_yes" 
                    class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
                    Supprimer
                </button>
            </div>
        </div>
    </div>
</div>

<script>

const buttons = document.getElementsByClassName("delete");
const modal = document.getElementById("modal");
let idDelete;

Array.from(buttons).map((button) =>
{
    button.addEventListener("click", () =>
    {
        //document.getElementById("modal").hidden = false;
        modal.classList.remove("hidden");
        modal.classList.add("flex");
        idDelete = button.id;
    });
});

document.getElementById("delete_yes").addEventListener("click", () =>
{
    window.location.href = "/categories/delete/" + idDelete;
});

document.getElementById("delete_no").addEventListener("click", () =>
{
    //document.getElementById("modal").hidden = true;
    
    modal.classList.remove("flex");
    modal.classList.add("hidden");
});

</script>

{% endblock %}
