<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>

        {% if app.user %}
            {% include "navbar.html.twig" %}
        {% endif %}

        <div class="max-w-3xl mx-auto mb-6">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    {% if type == 'success' %}
                        <div class="mb-4 flex items-center p-4 rounded-lg bg-green-100 text-green-700 border border-green-300 shadow">
                            <svg class="w-5 h-5 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 01.083 1.32l-.083.094L8 15.414l-4.707-4.707a1 1 0 011.32-1.497l.094.083L8 13.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            {{ message }}
                        </div>
                    {% elseif type == 'error' %}
                        <div class="mb-4 flex items-center p-4 rounded-lg bg-red-100 text-red-700 border border-red-300 shadow">
                            <svg class="w-5 h-5 mr-2 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-.75-11.5a.75.75 0 011.5 0v4.5a.75.75 0 01-1.5 0v-4.5zm0 7a.75.75 0 011.5 0V15a.75.75 0 01-1.5 0v-1.5z" clip-rule="evenodd"/>
                            </svg>
                            {{ message }}
                        </div>
                    {% elseif type == 'warning' %}
                        <div class="mb-4 flex items-center p-4 rounded-lg bg-yellow-100 text-yellow-800 border border-yellow-300 shadow">
                            <svg class="w-5 h-5 mr-2 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.721-1.36 3.486 0l6.518 11.59c.75 1.334-.213 2.986-1.743 2.986H3.482c-1.53 0-2.493-1.652-1.743-2.986L8.257 3.1zM10 13a1 1 0 100 2 1 1 0 000-2zm-.75-6.5a.75.75 0 011.5 0v4a.75.75 0 01-1.5 0v-4z" clip-rule="evenodd"/>
                            </svg>
                            {{ message }}
                        </div>
                    {% else %}
                        <div class="mb-4 flex items-center p-4 rounded-lg bg-blue-100 text-blue-700 border border-blue-300 shadow">
                            <svg class="w-5 h-5 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9 2a7 7 0 100 14A7 7 0 009 2zm0 12a5 5 0 110-10 5 5 0 010 10zm.75-7.25a.75.75 0 00-1.5 0v3.5a.75.75 0 001.5 0v-3.5zM9 12a1 1 0 100 2 1 1 0 000-2z"/>
                            </svg>
                            {{ message }}
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>

        {% block body %}{% endblock %}
    </body>
</html>
